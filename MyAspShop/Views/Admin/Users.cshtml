@model IEnumerable<MyAspShop.Models.User>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Список пользователей</h2>

<a asp-action="CreateUser" class="btn btn-success mb-3">Добавить пользователя</a>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Пароль</th>
            <th>Почта</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.LoginUser</td>
                <td>@user.PasswordUser</td>
                <td>@user.Email</td>
                <td>@(user.Role?.NameRole ?? "Нет роли")</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.IdUser" class="btn btn-sm btn-warning">Редактировать</a>
                    <form asp-action="DeleteUser" asp-route-id="@user.IdUser" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
