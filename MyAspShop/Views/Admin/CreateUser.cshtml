@model MyAspShop.Models.User
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Добавить пользователя</h2>

<form asp-action="CreateUser" method="post">
    <div class="form-group">
        <label>Имя пользователя</label>
        <input asp-for="LoginUser" class="form-control" />
        <span asp-validation-for="LoginUser" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Пароль</label>
        <input asp-for="PasswordUser" type="password" class="form-control" />
        <span asp-validation-for="PasswordUser" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Почта</label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Роль</label>
        <select asp-for="RoleId" asp-items="@(new SelectList(ViewBag.Roles, "IdRole", "NameRole"))" class="form-control"></select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
</form>
