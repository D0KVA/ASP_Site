@model MyAspShop.Models.User
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Редактировать пользователя</h2>
<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="IdUser" />
    <div class="form-group">
        <label>Логин</label>
        <input asp-for="LoginUser" class="form-control" />
    </div>
    <div class="form-group">
        <label>Пароль</label>
        <input asp-for="PasswordUser" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Роль</label>
        <select asp-for="RoleId" asp-items="@(new SelectList(ViewBag.Roles, "IdRole", "NameRole"))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
